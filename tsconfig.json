{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext"],
    "outDir": "build",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "types": ["node"]
  },
  "include": ["src/**/*"]
}
